<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/member_item_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_portrait"
            android:layout_width="45dp"
            android:layout_height="54dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/add_picture" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_carnumber"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_carbrand"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_freetime"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:textSize="15sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_status"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_small_circle_bg"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:background="@android:color/darker_gray"-->
    <!--android:layout_height="1dp">-->

    <!--</View>-->


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_potime"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_potel"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>
