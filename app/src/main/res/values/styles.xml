<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/CustomActionBar</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="colorPrimary">@android:color/holo_blue_light</item>
    </style>

    <style name="CustomActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/white</item>
    </style>
    <!--登录页的TextView的样式-->
    <style name="LoginTextViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/register_text_size</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="LoginEditTextStyle" parent="CustomEditTextStyle">
        <item name="android:paddingLeft">110dp</item>
    </style>

    <style name="circleButtonStyle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/register_text_size</item>
        <item name="android:background">@drawable/btn_circle_bg</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomEditTextStyle" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/register_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="colorControlActivated">@android:color/holo_blue_light</item>
    </style>

</resources>
